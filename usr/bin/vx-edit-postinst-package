#!/bin/bash

[ -z "${1}" ] && \
echo "=> Debes pasar como primer par치metro el paquete del cual editar su postinst" && \
echo "=> Puedes pasar como segundo par치metro el fichero a editar: prerm|preinst|postinst" && \
echo "=> Por defecto, si no se indica el segundo par치metro ser치: postinst" && \
exit 1

RUTABASE="/var/lib/dpkg/info/"
PACKAGE="${1}"
SUFIFO="${2:-"postinst"}"
FICHERO="${RUTABASE}/${PACKAGE}.${SUFIFO}"
[ -f "${FICHERO}" ] && \
nano "${FICHERO}"
