#!/bin/bash
# El comando lowriter imprime en la impresora configurada por defecto el documento indicado como par치metro

function salir() {
    echo "${1}"
    exit 1
}

# Puede recibir 1 o 2 par치metros: ${#}
[[ "${#}" < 1 ]] && salir "Debes indicar como par치metro el documento a imprimir ..."

DOCUMENTO="${1}"
[ -f "${DOCUMENTO}" ] && \
    lowriter -p "${DOCUMENTO}" && \
    vx-mensaje "Servicio de Impresi칩n" \
        "Se ha mandado el documento <b>${DOCUMENTO}</b> a la impresora <b>${IMP_PREDETERMINADA}</b>" \
        "impresora" \
        "Cerrar"
