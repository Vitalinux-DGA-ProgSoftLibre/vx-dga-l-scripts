#!/bin/bash

#Diseñado por Arturo Martín
#Proyecto Software Libre DGA

EJECUTOR=$(whoami)

function mensaje-error-root {
	TEXTO="Se requiren privilegios de \"administrador\" para Regenerar el perfil de los usuarios del sistema ..."
	echo "${TEXTO}"
	exit 1
}

if test "${EJECUTOR}" != "root" ; then
	mensaje-error-root
fi

# 1) Regeneramos el Entorno de Escritorio de los usuarios y sus archivos de configuración:
vx-regenerar-entorno-escritorio-cli
# 2) Regeneramos los directorios del Perfil de los usuarios:
vx-regenerar-directorios-usuarios-cli
# Mensaje de terminación:
echo "=> Ya se ha terminado de regenerar el los perfiles de los usuarios.  Comprobar que todo esta Ok!!"
